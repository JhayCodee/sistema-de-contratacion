@{
    ViewBag.Title = "EditarArea";

}


@if (Model != null)
{

    <h2 class="text-center text-info shadow-h pd">Editar Area</h2>

    <form id="miFormularioAreaE" method="post" action="@Url.Action("EditarArea", "Areas")">

        <input type="hidden" value="@Model.IdArea" name="IdArea" id="id" />

        <div class="shadow-custom pd m-t">

            <div class="row my-2">

                <div class="col-xs-12 col-sm-6 w-auto">
                    <div class="form-group">
                        <label for="Codigo" class="form-label">Codigo Area:</label>
                        <input type="text" name="CodigoArea" id="Codigo" class="form-control" value="@Model.CodigoArea" remote="@Url.Action("ValidarCodigoConId", "Areas")">
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 w-auto">
                    <div class="form-group">
                        <label for="Nombre" class="form-label">Nombre area:</label>
                        <input type="text" name="NombreArea" id="Nombre" class="form-control" value="@Model.NombreArea">
                        <div class="invalid-feedback"></div>
                    </div>
                </div>

            </div>

            <div class="radio">
                <label>
                    <input type="radio" name="Activo" id="optionsRadios1" value="true" @(Model.Activo == true ? "checked='checked'" : "")>
                    Activo
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="Activo" id="optionsRadios2" value="false" @(Model.Activo == false ? "checked='checked'" : "")>
                    Inactivo
                </label>
            </div>



            <div class="col-12" style="margin-top:20px;">
                <button type="button" id="editb" class="btn btn-primary my-1 w-100">Editar</button>
                @Html.ActionLink("Cancelar", "Index", "Areas", null, new { @class = "btn btn-danger my-1 w-100" })
            </div>

        </div>

    </form>
}
else
{
    <p>Area no existe</p>
}


@section scripts{
    @* Muestra las alertas al agregar un empleado *@


    <script>
        var mea = '@ViewBag.Message';
        var alertType = '@ViewBag.AlertType';


        $(document).ready(function () {

            // Mostrar mensaje de error si lo hay
            if (mea != null && mea != '') {
                Swal.fire({
                    icon: alertType,
                    title: 'Error',
                    text: mea,
                    confirmButtonText: 'OK'
                }).then(() => {
                    mea = null; // Limpiar el mensaje de error
                });
            }
        });

    </script>

    <script src="~/Scripts/Areas/sweetAlertActualizar.js"></script>
    <script src="~/Scripts/Areas/jQueryValidationActualizar.js"></script>

}




