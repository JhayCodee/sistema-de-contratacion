
@{
    ViewBag.Title = "AgregarCargo";
}

<h2 class="text-center text-info shadow-h pd">Agregar Cargo</h2>

<form id="miFormularioCargo" method="post" action="@Url.Action("AgregarCargo", "Cargos")" enctype="multipart/form-data">

    <div class="shadow-custom pd m-t">

        <div class="row my-2">

            <div class="col-xs-12 col-sm-6 w-auto">
                <div class="form-group">
                    <label for="Codigo" class="form-label">Codigo Cargo:</label>
                    <input type="text" name="CodigoCargo" id="Codigo" class="form-control" remote="@Url.Action("ValidarCodigoCargo", "Cargos")">
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 w-auto">
                <div class="form-group">
                    <label for="Nombre" class="form-label">Nombre Cargo:</label>
                    <input type="text" name="NombreCargo" id="Nombre" class="form-control">
                    <div class="invalid-feedback"></div>
                </div>
            </div>

        </div>

        <div class="row my-2">

            <div class="col-xs-12 col-sm-6 w-auto">
                <div class="form-group">
                    <label for="ri" class="form-label">Rango Salarial Inicial:</label>
                    <input type="Number" name="RangoSalarioInicial" id="ri" class="form-control" value="0">
                    <div class="invalid-feedback"></div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 w-auto">
                <div class="form-group">
                    <label for="rf" class="form-label">Rango Salarial Final:</label>
                    <input type="Number" name="RangoSalarialFinal" id="rf" class="form-control" value="0">
                    <div class="invalid-feedback"></div>
                </div>
            </div>

        </div>


        <div class="col-12">
            <button type="submit" class="btn btn-primary my-1 w-100">Agregar</button>
            @Html.ActionLink("Cancelar", "Index", "Cargos", null, new { @class = "btn btn-danger my-1 w-100" })
        </div>

    </div>

</form>


@section scripts
{

    <script>
        var mcg = '@ViewBag.Message';
        var alertType = '@ViewBag.AlertType';
    </script>

    <script src="~/Scripts/Cargos/sweetAlertAgregar.js"></script>

    <script src="~/Scripts/Cargos/jQueryValidationAgregar.js"></script>



}

